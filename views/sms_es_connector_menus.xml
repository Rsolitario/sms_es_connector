<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====================================================== -->
    <!-- 1. DEFINICIÓN DE VISTAS (LISTAS Y FORMULARIOS)         -->
    <!-- ====================================================== -->

    <!-- Vistas para el modelo sms_es.message -->
    <record id="sms_es_message_view_tree" model="ir.ui.view">
        <field name="name">sms_es.message.list</field>
        <field name="model">sms_es.message</field>
        <field name="arch" type="xml">
        <!-- problemas de compatibilidad antes tree v16 ahora list-->
            <list string="Mensajes SMS">
                <field name="create_date" string="Fecha"/>
                <field name="name"/>
                <field name="receiver" string="Receptor"/>
                <field name="sender" string="Remitente"/>
                <field name="state" widget="badge" decoration-success="state in ('delivered')" decoration-info="state in ('api_sent', 'queued')" decoration-warning="state in ('undelivered', 'rejected')" decoration-danger="state == 'api_failed'"/>
            </list>
        </field>
    </record>

    <record id="sms_es_message_view_form" model="ir.ui.view">
        <field name="name">sms_es.message.form</field>
        <field name="model">sms_es.message</field>
        <field name="arch" type="xml">
            <form string="Mensaje SMS">
                <header>
                <!-- prblemas con attr version nueva fue eliminado-->
                    <button name="action_queue_sms" string="Poner en Cola de Envío" type="object" class="oe_highlight" invisible="state != 'draft'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,queued,api_sent,delivered,api_failed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="receiver"/>
                            <field name="sender"/>
                        </group>
                        <group>
                            <field name="msg_id"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                    </group>
                    <group string="Contenido del Mensaje">
                        <field name="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vistas para el modelo sms_es.queue_job -->
    <record id="sms_es_queue_job_view_tree" model="ir.ui.view">
        <field name="name">sms_es.queue_job.list</field>
        <field name="model">sms_es.queue_job</field>
        <field name="arch" type="xml">
            <list string="Cola de Trabajos SMS">
                <field name="create_date" string="Fecha Creación"/>
                <field name="name"/>
                <field name="state"/>
                <field name="retry_count"/>
                <field name="next_try_datetime"/>
            </list>
        </field>
    </record>

    <record id="sms_es_queue_job_view_form" model="ir.ui.view">
        <field name="name">sms_es.queue_job.form</field>
        <field name="model">sms_es.queue_job</field>
        <field name="arch" type="xml">
            <form string="Trabajo de la Cola SMS">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message_id"/>
                        <field name="state"/>
                        <field name="retry_count"/>
                        <field name="max_retries"/>
                        <field name="next_try_datetime"/>
                        <field name="error_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ====================================================== -->
    <!-- 2. DEFINICIÓN DE ACCIONES                            -->
    <!-- ====================================================== -->

    <record id="sms_es_message_action" model="ir.actions.act_window">
        <field name="name">Mensajes SMS</field>
        <field name="res_model">sms_es.message</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="sms_es_queue_job_action" model="ir.actions.act_window">
        <field name="name">Cola de Trabajos SMS</field>
        <field name="res_model">sms_es.queue_job</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ====================================================== -->
    <!-- 3. DEFINICIÓN DE MENÚS                                -->
    <!-- ====================================================== -->

    <menuitem id="sms_es_connector_root_menu"
              name="SMS España"
              sequence="50"/>

    <menuitem id="sms_es_message_menu"
              name="Mensajes Enviados"
              parent="sms_es_connector_root_menu"
              action="sms_es_message_action"
              sequence="10"/>
    
    <menuitem id="sms_es_queue_job_menu"
              name="Cola de Envío"
              parent="sms_es_connector_root_menu"
              action="sms_es_queue_job_action"
              sequence="20"/>

</odoo>