<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vistas para el modelo sms_es.message -->
    
    <!-- Vista Lista (Tree) -->
    <record id="sms_es_message_view_tree" model="ir.ui.view">
        <field name="name">sms_es.message.tree</field>
        <field name="model">sms_es.message</field>
        <field name="arch" type="xml">
            <tree string="Mensajes SMS">
                <field name="create_date" string="Fecha"/>
                <field name="name"/>
                <field name="receiver" string="Receptor"/>
                <field name="sender" string="Remitente"/>
                <field name="state" widget="badge" decoration-success="state in ('delivered')" decoration-info="state in ('api_sent', 'queued')" decoration-warning="state in ('undelivered', 'rejected')" decoration-danger="state == 'api_failed'"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="sms_es_message_view_form" model="ir.ui.view">
        <field name="name">sms_es.message.form</field>
        <field name="model">sms_es.message</field>
        <field name="arch" type="xml">
            <form string="Mensaje SMS">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,queued,api_sent,delivered,api_failed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="receiver"/>
                            <field name="sender"/>
                        </group>
                        <group>
                            <field name="msg_id"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                    </group>
                    <group string="Contenido del Mensaje">
                        <field name="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Vistas para el modelo sms_es.queue_job -->

    <!-- Vista Lista (Tree) -->
    <record id="sms_es_queue_job_view_tree" model="ir.ui.view">
        <field name="name">sms_es.queue_job.tree</field>
        <field name="model">sms_es.queue_job</field>
        <field name="arch" type="xml">
            <tree string="Cola de Trabajos SMS">
                <field name="create_date" string="Fecha CreaciÃ³n"/>
                <field name="name"/>
                <field name="state"/>
                <field name="retry_count"/>
                <field name="next_try_datetime"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="sms_es_queue_job_view_form" model="ir.ui.view">
        <field name="name">sms_es.queue_job.form</field>
        <field name="model">sms_es.queue_job</field>
        <field name="arch" type="xml">
            <form string="Trabajo de la Cola SMS">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="message_id"/>
                        <field name="state"/>
                        <field name="retry_count"/>
                        <field name="max_retries"/>
                        <field name="next_try_datetime"/>
                        <field name="error_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>